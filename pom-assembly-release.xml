<assembly>
	<id>bin</id>
	<formats>
		<format>tar.bz2</format>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${basedir}/config</directory>
			<outputDirectory>config/</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${basedir}/domains</directory>
			<outputDirectory>domains/</outputDirectory>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${basedir}/target/ironia-commons.jar</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
</assembly>
